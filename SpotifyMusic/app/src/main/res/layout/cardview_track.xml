<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/img_thumb"
            android:layout_weight=".35"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:id="@+id/imgAlbum"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".65"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/font_h1"
                android:id="@+id/txtTrack"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/font_h2"

                android:id="@+id/txtAlbum"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/font_h2"
                android:id="@+id/txtArtist"/>
            <ImageButton
                android:layout_width="@dimen/btn_small"
                android:layout_height="@dimen/btn_small"
                android:layout_gravity="right"
                android:src="@drawable/ic_spotify"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_margin="@dimen/padding_small"
                android:id="@+id/btnPlay"/>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>